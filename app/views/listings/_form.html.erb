
<%= form_for @listing, :html => {:role => "form", :class => "form-vertical"} do |f| %>
	<%= f.label :listing_type %>
	<%= f.collection_select :listing_type_id, ListingType.order(:name),:id,:name %>

	<%= f.label :title %>
	<%= f.text_field :title, :class => "form-control" %>

	<%= f.label :description %>
	<%= f.text_area :description, :class => "form-control" %>

	<%= f.submit "Post Listing", :class => "btn btn-md btn-primary" %>
<% end %>