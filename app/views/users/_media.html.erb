<div id="profile_soundcloud">
	<div class="section_title">
		<h2>My Media</h2>
	</div>
	<div id="soundcloud_widget">						
		<% if sc_logged_in? %>
			<% @embed_info = current_user.soundcloud_client.get('/oembed', 
														:url => "http://soundcloud.com/#{current_user.soundcloud_username}/tracks", 
														:maxheight => 450) %>
			<div style="height:166px"><%= @embed_info['html'].html_safe %></div>
			<%= link_to image_tag("btn-disconnect-m.png", :border => 0, :alt => "Disconnect from SoundCloud"),
		soundcloud_disconnect_path, :class => "disconnect" %>
		<% else %>
			<%= link_to image_tag("btn-connect-sc-m.png", :border => 0, :alt => "Connect With SoundCloud"), soundcloud_connect_path, :class => "connect" %>
		<% end %>
	</div>
</div>