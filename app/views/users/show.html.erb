<% provide(:title, @user.name) %>
<div id="profile">
<div id="profile_header" class="row">
	<div class="col-md-12">
		<a href="http://gravatar.com/emails"><%= gravatar_for @user %></a>
		<h1><%= @user.name %></h1>
	</div>
</div>
<div class="row">
	<div id="profile_bio_col" class="col-md-5">
		<%= render "glance" %>
	</div>
	<div id="profile_social_col" class="col-md-7">
		<div id="profile_about" class="bio_block">
			<%= render "intro" %>
		</div>
		<div id="profile_media" class="bio_block">
			<%= render "media" %>
		</div>
	</div>
</div>
</div>