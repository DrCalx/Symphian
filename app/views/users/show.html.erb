<% provide(:title, @user.name) %>
<div class="row">
	<div class="col-md-4">
		<section>
			<h1><%= @user.name %></h1>
			<h2>Profile Page.</h2>
		</section>
	</div>
	<div class="col-md-8">
		<section>
			<div class="profile">
				<h3>Bio</h3>
				<%= render "edit_bio" %>
				<div class="user_bio">
					<%= current_user.bio %>
				</div>
				
				<h3>Talents</h3>
				<%= render "edit_instrument" %>
				<ul class="list-group instruments">
					<%= render @instruments %>
				</ul>

				<h3>Genres Enjoyed</h3>
				<% if current_user?(@user) %>
	<button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#inst-modal">edit</button>
	<% end %>
					<ul>
						<li>Classical</li>
						<li>Punk Rock</li>
						<li>Neo Pop</li>
						<li>Celtic Folk Dances</li>
					</ul>
			</div>
		</section>
	</div>
</div>