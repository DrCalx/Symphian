<% provide(:title, @user.name) %>
<div class="row">
	<div class="col-md-4">
		<section>
			<h1><%= @user.name %></h1>
			<h2>Profile Page.</h2>
		</section>
		<% if current_user?(@user) %>
		<section>
			<h3>What can I do here?</h3>
			<h4>Create a bio, so people can get to know a little more about you</h4>
			<h4>Select which instruments you play and be matched up with fellow players, or maybe a group looking for your talents</h4>
			<h4>Choose your favorite generes to narrow the search even more</h4>
			<h4>Or, create a group of your own, and see how Symphian can help you find others with the talent you need</h4>
		</section>
		<section>
			<button class="btn btn-xs btn-primary">Create a group</button>
			<button class="btn btn-xs btn-primary">Join a group</button>
		</section>
		<button id="soundcloud-login"><img src="http://connect.soundcloud.com/2/btn-connect-l.png"></button>
		<% end %>
	</div>
	<div class="col-md-8">
		<div class="profile">
			<div class="bio_block">
				<h3>Zip</h3>
				<%= render :layout => "shared/edit_modal", :locals => {:title => 'Zip'} do %>
					<%= fields_for(@user) do |f| %>
						<%= f.text_field :zip %>
						<%= f.submit "Save changes", class: "btn btn-primary" %>
					<% end %>
				<% end %>
				<p><%= @user.zip %></p>
			</div>

			<div class="bio_block">
				<h3>Bio</h3>
				<%= render :layout => "shared/edit_modal", :locals => {:title => 'Bio'} do %>
					<%= fields_for(@user) do |form| %>
						<%= form.text_area :bio %>
						<%= form.submit "Save changes", class: "btn btn-primary" %>
					<% end %>
				<% end %>
				<p><%= @user.bio %></p>
			</div>
			
			<div class="bio_block">
				<h3>Talents</h3>
 				<%= render :layout => "shared/edit_modal", :locals => {:id => 'inst', :title => 'Select Instruments'} do %>
					<%= render "edit_instrument" %>
				<% end %>
				<ul class="list-group instruments">
					<%= render @instruments %>
				</ul>
			</div>

			<div class="bio_block">
				<h3>Genres Enjoyed</h3>
				<%= render :layout => "shared/edit_modal", :locals => {:id => 'genre', :title => 'Genres'} do %>
					<%= render "edit_genre" %>
				<% end %>
				<ul class="list-group">				
					<%= render @user.genres %>
				</ul>
			</div>

			<div class="bio_block">
				<h3>Groups</h3>
				<ul class="list-group">
					<%= render @user.groups %>
				</ul>
			</div>

			<div class="bio_block">
				<h3>Openings</h3>
				<%= render @openings %>
			</div>
		</div>
	</div>
</div>

