
<% if signed_in? %>
	<div class="row">
		<div class="col-md-4">
			<section class="home_block user_info">
				<%= render "shared/user_info" %>
			</section>
			<section class="home_block station_player">
				<%= render "shared/sc_station_player" %>
			</section>
			<section class="home_block">
				<h3>Music News</h3>
				<%= render "feeds/feed" %>
			</section>
		</div>
		<div class="col-md-8">
			<div class="home_block">
				<%= render "shared/listings" %>
			</div>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to Symphian</h1>
		<h2>This is the <a href='#'>musician</a>'s network</h2>
		<%= link_to "Sign me up", signup_path, class: "btn btn-primary" %>
		<%= link_to "Sign me in", signin_path, class: "btn btn-success" %>
		<%= link_to "Login with Facebook", "/auth/facebook", class: "btn btn-default" %>
	</div>
	<div class="center jumbotron">
		<h1>Check The News</h1>
		<h2>Get all your music news in one place</h2>
	</div>
	<div class="center jumbotron">
		<h1>Hear Some Tunes</h1>
