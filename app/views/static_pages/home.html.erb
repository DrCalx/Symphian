
<% if signed_in? %>
	<div class="row">
		<div class="col-md-12">			
			<h1>
				<%= "Welcome back #{current_user.name}" %>
			</h1>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<div class="row">
				<div class="col-md-12">
					<div class="soundcloud-stream home_block">
						<h3>SoundCloud Radio</h3>
						<% if sc_logged_in? %>
							<p>Here's a song you might like:</p>
							<%= render partial: "soundcloud/player", locals: {genreStation: true, player: @player} %>
						<% else %>
							<p>Update your <%= link_to "profile", current_user %> with a SoundCloud account to hear music based on your preferences!</p>
						<% end %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="home_block">
						<h3>Music News</h3>
						<%= render "feeds/feed" %>
					</div>
				</div>
			</div>			
		</div>
		<div class="col-md-8">
			<div class="home_block">
				<%= render "shared/listings" %>
			</div>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to Symphian</h1>
		<h2>This is the <a href='#'>musician</a>'s network</h2>
		<%= link_to "Sign me up", signup_path, class: "btn btn-primary" %>
		<%= link_to "Sign me in", signin_path, class: "btn btn-success" %>
	</div>
	<div class="center jumbotron">
		<h1>Check The News</h1>
		<h2>Get all your music news in one place</h2>
	</div>
	<div class="center jumbotron">
		<h1>Hear Some Tunes</h1>
		<h2>With the SoundCloudâ„¢ player, hear your favorite genres, or share your own tracks</h2>
	</div>
	<div class="center jumbotron">
		<h1>Join A Band</h1>
		<h2>Whether you're looking for a gig, or hitting the big time - collaborate with fellow musicians from your area</h2>
	</div>
	<div class="center jumbotron">
		<h1>Lend A Hand</h1>
		<h2>Got skills? Share the wealth by offering lessons, or, polish your playing with a tutor of your own</h2>
	</div>
<% end %>