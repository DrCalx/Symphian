<% provide(:title, 'New Group') %>
<h1>Create a Group</h1>

<div class="row">
	<div class="col-xs-6 col-md-offset-3">
		<%= form_for(@group) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
			
			<%= f.label :bio %>
			<%= f.textarea :bio, class: "form-control" %>

			<%= f.submit "Create Group", class: "btn btn-primary"%>
		<% end %>
	</div>
</div>