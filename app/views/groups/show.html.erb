<% provide(:title, @group.name) %>
<div class="row">
	<div class="col-md-12 group-title">
		<h1><%= @group.name %></h1>
		<p><%= @group.bio %></p>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
		<h1>Soundcloud</h1>
	</div>
	<div class="col-md-4">
		<div class="profile">
			<div class="bio_block">
				<h3>Calendar</h3>
				<% if manager?(@user) %>
					<p>Symphian uses Google Calendar for all it's awesome functionality.</p>
					<p>Connect your Google account to start using this feature.</p>
					<%= link_to 'Google Auth', '/auth/google_oauth2' %>
				<% end %>
			</div>
			
			<div>
				<% if false %>
					<%= render :layout => "shared/edit_modal", :locals => {:title => 'Zip'} do %>
						<%= fields_for(@user) do |f| %>
							<%= f.text_field :zip %>
							<%= f.submit "Save changes", class: "btn btn-primary" %>
						<% end %>
					<% end %>
				<% end %>
				<p><%= @group.zip %></p>
			</div>

			<!%= render "openings" %>

			<div class="bio_block">
				<h3>Genre</h3>
				<% if manager?(@user) %>
					<%= render "edit_genre" %>
				<% end %>
				<%= render @group.genres %>
			</div>
		</div>
	</div>
	<div class="col-md-4 group-box">
		<h1>Members</h1>
		<%= render @group.members %>
	</div>
</div>